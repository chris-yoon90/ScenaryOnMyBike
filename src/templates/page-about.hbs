{{!< default}}

{{#post}}
<main class="main-content">
	<div class="container-fluid">
		<div class="row row-eq-height">
			<div class="col-sm-7 col-sm-push-5">
				<section class="administrator-name card card-1">
					<h1>{{author.name}}</h1>
					<h2>Software Developer</h2>
				</section>
			</div>
			<div class="col-sm-5 col-sm-pull-7">
				<section class="administrator-contact card card-1">
					{{#author}}
					<address>
						<i class="fa fa-desktop"></i>&nbsp;&nbsp;<a href="{{website}}">{{website}}</a>
						<br/>
						<i class="fa fa-envelope-o"></i>&nbsp;&nbsp;chris.yoon90@gmail.com
					</address>
					{{/author}}
				</section>
			</div>
		</div>
		<div class="row row-gutter">
			<div class="col-sm-12">
				<section class="about-me card card-1">
					<h1 class="sub-headline">About me</h1>
					<p>{{author.bio}}</p>
					
					<ul class="timeline">
						<li>
							<span class="timeline-badge"><i class="fa fa-calendar"></i></span>
							<label class="timeline-label">2008</label>
							<span class="timeline-details">Graduated High school. Started studying in Engineering Factulty of the University of British Columbia.</span>
						</li>
						<li class="timeline-inverted">
							<span class="timeline-badge"><i class="fa fa-calendar"></i></span>
							<label class="timeline-label">2009</label>
							<span class="timeline-details">Started studying in Engineering Physics program.</span>
						</li>
						<li>
							<span class="timeline-badge"><i class="fa fa-calendar"></i></span>
							<label class="timeline-label">2014</label>
							<span class="timeline-details">Graduated university. Started as a Junior Developer in PNI Digital Media.</span>
						</li>
						<li class="timeline-inverted">
							<span class="timeline-badge"><i class="fa fa-calendar"></i></span>
							<label class="timeline-label">2015</label>
							<span class="timeline-details">Promoted to Intermediate Developer in PNI Digital Media.</span>
						</li>
						<li>
							<span class="timeline-badge"><i class="fa fa-calendar"></i></span>
							<label class="timeline-label">Present</label>
							<span class="timeline-details">Building a single page application that will allow the user to personalize printable products on web and turn it into physical print.</span>
						</li>
					</ul>
				</section>
			</div>
		</div>
		<div class="row row-gutter">
			<div class="col-sm-8">
				<section class="skills card card-1">
					<h1 class="sub-headline">Programming Languages</h1>
					
					<section class="skill-bars">
						<div class="progress">
							<div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
								JavaScript
							</div>
						</div>
						<div class="progress">
							<div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
								HTML
							</div>
						</div>
						<div class="progress">
							<div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width: 70%">
								CSS
							</div>
						</div>
						<div class="progress">
							<div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%">
								C#
							</div>
						</div>
						<div class="progress">
							<div class="progress-bar" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
								Java
							</div>
						</div>
						<div class="progress">
							<div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
								Ruby
							</div>
						</div>
						<div class="progress">
							<div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="width: 30%">
								SQL
							</div>
						</div>
					</section>
					
					<section class="legend">
						<dl>
							<dt>Striped and animated</dt>
							<dd>I actively use it almost everyday.</dd>
							<dt>No-Stripe</dt>
							<dd>Prior experience but I don't use it too often.</dd>
						</dl>
					</section>
				</section>
			</div>
			<div class="col-sm-4">
				<section class="influencers card card-1">
					<h1 class="sub-headline">Interests</h1>
					
					<div class="influencer-chart-container">
						<div class="influencer-chart-holder">
							<canvas id="influencer-chart" width="100px" height="100px"></canvas>
						</div>
					</div>
					
				</section>
			</div>
		</div>
		<div class="row row-gutter">
			<div class="experiences col-sm-12">
				<section class="card card-1">
					{{content}}
				</section>
			</div>
		</div>
	</div>
</main>
{{/post}}