{{!< default}}

<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <h1 class="header-title">{{@blog.title}}</h1>
    <h2 class="header-description">{{@blog.description}}</h2>
</header>

{{! The main content area on the homepage }}
<main class="content" role="main">
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
				<aside class="pagination-top">
					{{pagination}}
				</aside>

				{{> "loop"}}

				{{! Previous/next page links - displayed on every page }}
				{{pagination}}
			</div>
		</div>
	</div>
</main>