{{!< default}}

<header class="post-index-banner">
	{{#is "tag"}}
	{{#tag}}
	<h1 class="page-title"><i class="fa fa-tag"></i> {{tag.name}}</h1>
	<h2 class="page-description">{{tag.description}}</h2>
	{{/tag}}
	{{/is}}
	{{#is "home"}}
	<h1 class="page-title">Blog</h1>
	{{/is}}
</header>

<main class="container-fluid" role="main">
	{{pagination}}
	<div id="posts">
		{{#foreach posts}}
		<article class="{{post_class}} grid-sizer">
			<div class="card card-1">
				<header class="post-header speech-bubble">
					<time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time>
					<h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
					<address class="author-meta">by {{author.name}}</address>
				</header>
				<section class="post-excerpt">
					<p>{{excerpt words="26"}}...</p>
					<p><a class="read-more" href="{{url}}">CLICK TO READ POST</a></p>
				</section>
				<footer class="post-meta">
					{{> "tag-partial"}}
				</footer>
			</div>	
		</article>
		{{/foreach}}
	</div>
	{{pagination}}
</main>